{
    "name": "simpro/restclient-php",
    "description": "Authenticate and access the simPRO RESTful API using PHP",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=5.3.0",
        "league/oauth2-client": "^2.3",
        "pimple/pimple": "^3.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "simPRO\\RestClient\\": "src/"
        }
    },
    "scripts": {
        "lint": "php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix ."
    }
}
